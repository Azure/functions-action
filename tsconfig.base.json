    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./lib",
        "strict": false,
        "strictFunctionTypes": true,
        "noImplicitAny" : true,
        "noUnusedParameters": true,
        "types": [
            "mocha"
        ]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}